{
  "compilerOptions": {
    "baseUrl": "./",  // 解析非相对模块的基地址，默认是当前目录
    "paths": {        // 路径映射，相对于baseUrl
      "@/*": ["src/*"] 
    },
    "esModuleInterop": true,
  },
  // 自动导入TS类型声明文件引入
  "include": ["mock/**/*.ts", "src/**/*.ts", "src/**/*.vue", "vite.config.ts"],
  "exclude": ["node_modules", "dist", "**/*.js"]
}
